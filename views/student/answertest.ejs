<%- include ("../partials/header") %> 

<div class="row">
    <div class="col-md-6 m-auto">
        <form class="form-container" action="/students/viewtest/:tid/answertest" method="POST" enctype="multipart/form-data">
            <h1 class="text-center display-4 my-4">Title: <%= qfile.metadata.title %></h1>
            <h2 class="text-center my-4">Add Answer File</h2>
            
            <div class="input-group mb-3 d-none">
                <input type="text" name="fileid" class="form-control" value="<%= qfile._id %>">
            </div>
            <% if(!file){ %>
                <div class="input-group mb-3">
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" name="file" id="inputGroupFile01" aria-describedby="inputGroupFileAddon01" disabled>
                        <label class="custom-file-label" for="inputGroupFile01">You have already submitted the answer</label>
                    </div>
                </div>
            <% } else { %>
                <p class="text-center text-danger">You can Only Submit Once!</p>
                <div class="input-group mb-3">
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" name="file" id="inputGroupFile01" aria-describedby="inputGroupFileAddon01">
                        <label class="custom-file-label" for="inputGroupFile01">Choose File</label>
                    </div>
                </div>
            <% } %>
            <input type="submit" value="Upload" class="btn btn-primary btn-block toastbtn">
        </form>
        <a href="/students/viewtest"><i class="fas fa-angle-left mt-3"></i>&nbsp;Go Back</a>
    </div>
</div>

<%- include ("../partials/footer") %> 