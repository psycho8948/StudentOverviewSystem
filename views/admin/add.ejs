<%- include ("../partials/header") %> 


<div class="row">
    <div class="col-md-6" style="float: none; margin: auto;">
        <form class="form-container" action="/admin/add" method="POST">
            <h1 class="mb-3" style="text-align: center;">Add New Teacher</h1>
            <div class="input-group mb-3">
                <input type="text" name="name" class="form-control" placeholder="Name" required>
            </div>
            <div class="input-group mb-3">
                <input type="text" name="email" class="form-control" placeholder="Email" required>
            </div>
            <div class="input-group mb-3">
                <input type="text" name="username" class="form-control" placeholder="Username" required>
            </div>
            <div class="input-group mb-3">
                <input type="password" name="password" class="form-control" placeholder="Password" required>
            </div>
            <button class="btn btn-primary btn-block mb-3">Add Teacher</button>
            <a href="/admin"><i class="fas fa-angle-left"></i>&nbsp;Go Back</a>
        </form>
    </div>
</div>



