<%- include ("../partials/header") %> 

<div class="row animated fadeIn fast">
    <div class="col-md-6" style="float: none; margin: auto;">
        <form class="form-container" action="/admin/manage/<%= teacher._id %>/resetpassword?_method=PUT" method="POST">
            <h1 class="mb-3" style="text-align: center;">Update Password For: <%= teacher.name %></h1>
            <div class="input-group mb-3">
                <input type="password" name="password" class="form-control" placeholder="New Password" minlength="6" required>
            </div>
            <button class="btn btn-outline-primary btn-block">Reset Password</button>
            <a href="/admin/manage"><i class="fas fa-angle-left mt-4"></i>&nbsp;Go Back</a>
        </form>
    </div>
</div>

<%- include ("../partials/footer") %> 