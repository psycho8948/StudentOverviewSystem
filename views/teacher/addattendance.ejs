<%- include ("../partials/header") %> 
<div class="row animated fadeIn fast">
<% students.myStudents.forEach(function(student){ %>
    <div class="col-md-4">
        <div class="card border-dark mb-3" style="border-radius: 10px; box-shadow: 0px 0px 10px 0px #000;">
            <div class="card-header">Name: <%= student.name %> </div>
            <div class="card-body">
                <h5 class="card-title">Username: <%= student.username %></h5>
                <p class="card-text">Email: <%= student.email %></p>
                <% if(student.attendanceP.includes(date)){ %>
                    <p class="card-text text-warning">Attendance already added</p>
                    <p class="card-text text-success">Marked Present</p>
                <% } else if(student.attendanceA.includes(date)){ %>
                    <p class="card-text text-warning">Attendance already added</p>
                    <p class="card-text text-danger">Marked Absent</p>
                <% } else { %>
                    <form action="/teachers/addattendance/<%= student._id %>/present" style="display: inline;" method="POST">
                        <button class="btn btn-outline-success btn-block mt-2">Present</button>
                    </form>
                    <form action="/teachers/addattendance/<%= student._id %>/absent" style="display: inline;" method="POST">
                        <button class="btn btn-outline-danger btn-block mt-2">Absent</button>
                    </form>
                <% } %>
            </div>
          </div>
    </div>
<% }); %>
</div>
<a href="/teachers"><i class="fas fa-angle-left"></i>&nbsp;Go Back</a>

<%- include ("../partials/footer") %> 