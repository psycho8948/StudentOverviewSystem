<%- include ("../partials/header") %> 


<div class="row">
    <% if(files) { %>
    <% files.forEach(function(file){ %>
    <div class="col-md-4">
        <div class="card border-dark mb-3" style="border-radius: 10px; box-shadow: 0px 0px 10px 0px #000;">
            <div class="card-header"><em>Answer to <%= questionFile.metadata.title %></em></div>
            <div class="card-body">
            <div class="card-title"><strong>Uploaded on: </strong><%= file.uploadDate.toDateString() %></div>
            <p class="card-text"><strong>By Student: </strong><%= file.metadata.by %></p>
            <div class="mb-3">
                <a href="/files/<%= file.filename %>" target="_blank">Click Here for Answer File</a>
            </div>
            <form action="/teachers/managetest/viewtest/<%= file._id %>?_method=DELETE" class="delete-form" method="POST">
                <button class="btn btn-outline-danger btn-block mt-3">Delete</button>
            </form>
            </div>
        </div>
    </div>
    <% }); %>
    <% } else { %>
    <h1 class="display-5">No Files to Show..</h1>
    <% } %> 
</div>
<a href="/teachers/managetest/"><i class="fas fa-angle-left mt-3"></i>&nbsp;Go Back</a>



<%- include ("../partials/footer") %> 