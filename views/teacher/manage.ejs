<%- include ("../partials/header") %> 
<h1>All Students</h1>


<div class="row">
    <% pupil.myStudents.forEach(function(student){ %>
    <div class="col-md-4">
        <div class="card border-dark mb-3" style="border-radius: 10px; box-shadow: 0px 0px 10px 0px #000;">
            <div class="card-header">Name: <%= student.name %> </div>
            <div class="card-body">
              <h5 class="card-title">Username: <%= student.username %></h5>
              <p class="card-text">Email: <%= student.email %></p>
              <a href="/teachers/manage/<%= student._id %>/edit" class="btn btn-outline-warning btn-block">Edit Student Info</a>
              <a href="/teachers/manage/<%= student._id %>/resetpassword" class="btn btn-outline-primary btn-block mt-2">Reset Password</a>
                <form action="/teachers/manage/<%= student._id %>?_method=DELETE" class="delete-form" style="display: inline;" method="POST">
                    <button class="btn btn-outline-danger btn-block mt-2">Delete</button>
                </form>
            </div>
          </div>
    </div>
    <% }) %> 
</div>
<a href="/teachers"><i class="fas fa-angle-left"></i>&nbsp;Go Back</a>


<%- include ("../partials/footer") %> 