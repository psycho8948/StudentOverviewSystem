<%- include ("../partials/header") %>
<h1>Students with low attendance: </h1>


<div class="row">
    <% students.forEach(function(student){ %>
        <div class="col-md-4 mt-3">
            <div class="card border-dark mb-3" style="border-radius: 10px; box-shadow: 0px 0px 10px 0px #000;">
                <div class="card-header">Name: <%= student.name %> </div>
                <div class="card-body">
                    <h5 class="card-title">Username: <%= student.username %></h5>
                    <p class="card-text">Email: <%= student.email %></p>
                    <% if(student.attendanceEmail.includes(date)){ %>
                        <p class="card-text text-warning">Email on Low Attendance is already sent</p>
                    <% } else { %>
                        <form action="/teachers/manageattendance/<%= student._id %>/sendemail" method="POST">
                            <button class="btn btn-outline-primary btn-block">Send Low Attendance Email</button>
                        </form>
                    <% } %>
                </div>
            </div>
        </div>
    <% }); %>
</div>
<a href="/teachers"><i class="fas fa-angle-left"></i>&nbsp;Go Back</a>
